<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Reamaze PHP SDK</title>

  <parser>
    <target>docs/data</target>
  </parser>

  <transformer>
    <target>docs</target>
  </transformer>

  <transformations>
    <template name="responsive-twig" />
  </transformations>

    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/docs/log/{DATE}.log</default>
            <errors>{APP_ROOT}/docs/log/{DATE}.errors.log</errors>
        </paths>
    </logging>

  <files>
    <directory>src</directory>
  </files>
</phpdoc>